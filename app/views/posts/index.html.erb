<% @posts.each do |post| %>
<div class="well" >
  <table>
      <tr id="title">
        <td>Title</td>
        <td style="width: 40px;"></td>
        <td><%= post.title %></td>
      </tr>
      <tr id="author">
        <td>Author</td>
        <td></td>
        <td><%= post.author %></td>
      </tr>
      <tr id="thoughts">
        <td>Thoughts</td>
        <td></td>
        <td><%= post.blog_entry %></td>
      </tr>
      <tr style="height: 40px;">
        <td></td>
        <td></td>
        <td>
          <%= post.created_at.strftime('%D - %r') %>
      </tr>
      <tr style="height: 20px;">
        <td></td>
        <td></td>
        <td>
          <div class="btn-group-sm" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><%= link_to 'Show', post %></button>
            <button type="button" class="btn btn-default"><%= link_to ' Edit', edit_post_path(post) %></button>
            <button type="button" class="btn btn-default"><%= link_to ' Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>
      </tr>
</table>
</div>
  <% end %>
<button type="button" class="btn btn-default"><%= link_to 'New Post', new_post_path %></button>
